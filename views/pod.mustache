<h2>Pod {{podId}}</h2>
{{#pairUrl}}<p><a href="{{pairUrl}}">Pair Next Round</a>{{/pairUrl}}
{{#rounds}}
  <h3>Round {{roundNumber}}</h3>
  <table class="table table-striped">
    {{#matches}}
      <tr>
        <td>{{>profilepic}} {{name}}</td><td>{{wins}}</td>
        <td> - </td>
        <td class="r">{{opponentWins}}</td><td>{{opponentName}} {{#opponentUrl}}<a href="http://facebook.com/profile.php?id={{opponentId}}"><img src="http://graph.facebook.com/{{opponentId}}/picture"></a>{{/opponentUrl}}</td>
      </tr>
      {{#reportUrl}}
      <form action="{{reportUrl}}">
        <input type="hidden" name="match_id" value="{{matchId}}">
        <tr>
          <td class="r"><input name="wins"></td>
          <td></td>
          <td> - </td>
          <td></td>
          <td><input name="opponent_wins">
          <input type="submit" value="Go"></td>
        </tr>
      </form>
      {{/reportUrl}}
    {{/matches}}
  </table>
{{/rounds}}

<h2>Pod {{podId}}</h2>
{{#pairUrl}}<p><a class="btn btn-warning" href="{{pairUrl}}">Pair Next Round</a>{{/pairUrl}}
{{#unpairUrl}}<form class="inline" action="{{unpairUrl}}" method="post"><input class="btn btn-warning" type="submit" value="Unpair"></form>{{/unpairUrl}}
{{#minsLeft}}<p>{{>timeOnTheRound}}</p>{{/minsLeft}}
{{#rounds}}
  <h3>Round {{roundNumber}}</h3>
  <table class="table table-striped">
    {{#matches}}
      <tr>
        <td class="col-xs-4">
          {{>person}}
          </td>
          <td class="col-xs-4 text-center">
            {{^potentialResults}}
              <big>{{wins}} - {{opponentWins}}</big>
            {{/potentialResults}}
            {{>resultreporter}}
          </td>
          <td class="col-xs-4">
          {{#opponent}}
            {{>person}}
          {{/opponent}}
        </td>
      </tr>
    {{/matches}}
  </table>
{{/rounds}}

<h3>Standings</h3>
<table class="table table-striped">
  <tr>
    <th>Player</th>
    <th class="text-right">Points</th>
    <th class="text-right">Game Wins</th>
    <th class="text-right">Game Losses</th>
  </tr>
  {{#standings}}
    <tr>
      <td>{{>person}}</td>
      <td class="text-right">{{points}}</td>
      <td class="text-right">{{wins}}</td>
      <td class="text-right">{{losses}}</td>
    </tr>
  {{/standings}}
</table>
